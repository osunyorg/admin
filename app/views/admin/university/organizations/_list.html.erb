<div class="row g-3">
  <% organizations.each do |organization| %>
    <div class="col-6 col-lg-3 col-xxl-2">
      <div class="<%= osuny_card_classes %>">
        <%= render 'admin/university/organizations/thumbnail',
                    organization: organization,
                    large: true %>
        <% if organization.deleted? %>
          <div class="card-body">
            <%= organization.best_localization_for(current_language) %>
          </div>
          <% if can?(:restore, organization) %>
            <div class="card-footer mb-n2">
              <%= link_to t('restore'),
                          restore_admin_university_organization_path(organization),
                          method: :post,
                          class: button_classes %>
            </div>
          <% end %>
        <% else %>
          <div class="card-body">
            <%= osuny_published_localized organization %>
            <%= osuny_link_localized  organization,
                                      admin_university_organization_path(organization),
                                      classes: 'stretched-link' %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>