<div class="table-responsive">
  <table class="<%= table_classes %>">
    <thead>
      <tr>
        <th><%= University::Person::Category::Localization.human_attribute_name('name') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% categories.each do |category| %>
        <tr>
          <td>
            <%= osuny_link_localized  category,
                                      admin_university_person_category_path(category) %>
          </td>
          <td class="text-end">
            <div class="btn-group" role="group">
              <%= edit_link category if category.editable? %>
              <%= destroy_link category if category.editable? %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
