<% content_for :title, @diploma %>

<div class="row">
  <div class="col-lg-4">
    <%= osuny_panel Education::Diploma.human_attribute_name('name'), small: true do %>
      <p class="lead"><%= @diploma.name %></p>
    <% end %>
  </div>
  <div class="col-lg-8">
    <%= render 'admin/application/summary/show', about: @diploma, small: true %>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <h2 class="h4">Informations administratives</h2>
  </div>
  <div class="col-lg-8">
    <table class="table">
      <tbody>
        <tr>
          <th><%= osuny_label Education::Diploma.human_attribute_name('level') %></th>
          <td class="text-end"><%= @diploma.level_i18n %></td>
        </tr>
        <tr>
          <th><%= osuny_label Education::Diploma.human_attribute_name('ects') %></th>
          <td class="text-end"><%= @diploma.ects %></td>
        </tr>
        <tr>
          <th><%= osuny_label Education::Diploma.human_attribute_name('duration') %></th>
          <td class="text-end"><%= @diploma.duration %></td>
        </tr>
        <tr>
          <th><%= osuny_label Education::Diploma.human_attribute_name('short_name') %></th>
          <td class="text-end"><%= @diploma.short_name %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<%= render 'admin/communication/blocks/content/editor', about: @diploma %>

<div class="row">
  <div class="col-lg-4">
    <h2 class="h4"><%= Education::Program.model_name.human(count: 2) %></h2>
  </div>
  <div class="col-lg-8">
    <%= render 'admin/education/programs/list', programs: @programs, hide_diploma: true %>
  </div>
</div>

<% content_for :action_bar_left do %>
  <%= destroy_link @diploma %>
  <%= static_link static_admin_education_diploma_path(@diploma) %>
<% end %>

<% content_for :action_bar_right do %>
  <%= edit_link @diploma %>
<% end %>
