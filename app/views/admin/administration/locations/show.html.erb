<% content_for :title, @l10n %>

<% content_for :title_right do %>
  <%= edit_link @location %>
  <%= button_advanced do %>
    <%= destroy_link @location %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-lg-3">
    <%= render 'admin/application/images/featured/show', about: @l10n %>
  </div>
  <div class="offset-lg-1 col-lg-8">
    <%= render 'admin/application/summary/show', about: @l10n %>
    <div class="mb-5">
      <%= render 'admin/application/contact_details/show', about: @location, l10n: @l10n %>
    </div>
    <% if @schools.any? %>
      <%= osuny_small_panel Administration::Location.human_attribute_name('schools') do %>
        <%= render 'admin/education/schools/list', schools: @schools %>
      <% end %>
    <% end %>
    <% if @programs.any? %>
      <%= osuny_small_panel Administration::Location.human_attribute_name('programs') do %>
        <%= render 'admin/education/programs/list', programs: @programs %>
      <% end %>
    <% end %>
    <% if @websites.any? %>
      <%= osuny_small_panel Administration::Location.human_attribute_name('websites') do %>
        <%= render 'admin/communication/websites/list', websites: @websites %>
      <% end %>
    <% end %>
  </div>
</div>

<%= render 'admin/communication/contents/editor', about: @l10n %>
<%= render 'admin/application/connections/list', about: @location %>

<% content_for :server_admin_only do %>
  <%= static_link static_admin_administration_location_path(@location) %>
<% end %>