<% content_for :title, @l10n %>

<% content_for :title_right do %>
  <%= button_advanced do %>
    <%= destroy_link @collection %>
  <% end %>
  <%= edit_link @collection %>
<% end %>

<% if @medias.total_count > 0 %>
  <p>
    <%= @medias.total_count %>
    <%= Communication::Media.model_name.human(count: @medias.total_count).downcase %>
  </p>
  <%= render 'admin/communication/medias/list', medias: @medias %>
  <%= paginate @medias %>
<% end %>
