<% content_for :title, @post %>

<%= render 'admin/communication/extranets/sidebar' do %>
  <div class="row">
    <div class="col-lg-7">
      <%= osuny_panel Communication::Website::Post.human_attribute_name(:title), small: true do %>
        <p class="lead"><%= @post.title %></p>
      <% end %>
    </div>
    <div class="offset-lg-1 col-lg-4">
      <%= render 'admin/application/featured_image/show', about: @post, small: true %>
    </div>
  </div>
  <hr class="mb-5">
  <%= render 'admin/application/a11y/widget', about: @post, horizontal: true %>
  <hr class="mb-5">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'admin/communication/extranets/posts/show/metadata' %>
    </div>
    <div class="col-lg-8">
      <%= render 'admin/application/summary/show', about: @post, small: true %>
    </div>
  </div>
  <%= render 'admin/communication/blocks/content/editor', about: @post %>
<% end %>

<% content_for :action_bar_left do %>
  <%= destroy_link @post %>
<% end %>

<% content_for :action_bar_right do %>
  <%= link_to t('open'),
              posts_post_url(@post.slug, host: @post.extranet.url, extranet_id: nil),
              target: :_blank,
              class: 'btn btn-light btn-xs' if @post.published %>
  <%= preview_link %>
  <%= edit_link @post %>
<% end %>
