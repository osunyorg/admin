<% content_for :title, @menu %>

<%= simple_form_for [:admin, @menu] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-md-8">
      <%= f.input :title %>
    </div>
  </div>
  <% content_for :action_bar_right do %>
    <%= cancel [:admin, @menu] %>
    <%= submit f %>
  <% end %>
<% end %>
