<%
month = @l10n.about
language = @l10n.language
%>---
<%= render 'admin/application/static/core',
            about: @l10n,
            skip_date: true,
            forced_title: @l10n.to_month_and_year %>
<%= render 'admin/application/static/breadcrumbs', about: @l10n %>
<%= render 'admin/application/static/design',
            full_width: true,
            toc_present: false,
            toc_offcanvas: false %>
<%= render 'admin/application/l10n/static', about: @l10n %>
days:
<%
@l10n.days.each do |day| 
  events = day.events
  next if events.none?
  %>
  - day:
      date: <%= day.iso8601 %>
      labels: 
        day: "<%= day.to_s %>"
        full: "<%= day.to_full_name %>"
    events:
      count: <%= events.count %>
<%= render 'admin/application/static/hugo/collection',
            key: :list,
            collection: events,
            language: language,
            depth: 3 %>
<% end %>
---