<% content_for :title, "#{Communication::Website::Agenda::Exhibition.model_name.human(count: 2)} (#{@exhibitions.total_count})" %>

<% content_for :title_right do %>
  <%= create_link Communication::Website::Agenda::Exhibition %>
<% end %>

<div class="d-flex justify-content-between mb-4">
  <p>
    <%= @exhibitions.total_count %>
    <%= t('admin.item', count: @exhibitions.total_count) %>
  </p>
  <%= render 'filters', current_path: admin_communication_website_agenda_exhibitions_path, website: @website %>
</div>

<%= render 'admin/communication/websites/agenda/exhibitions/list', exhibitions: @exhibitions %>
<%= paginate @exhibitions %>
