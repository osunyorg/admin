<div class="d-flex justify-content-between mb-5">
  <%= render 'admin/application/components/lifecycle/pills',
              path_method: :list_admin_communication_website_pages_path %>
  <%= simple_form_for :filters, url: list_admin_communication_website_pages_path, method: :get do |f| %>
    <%= filters_panel current_path: list_admin_communication_website_pages_path,
                      active_filters_count: active_filters_count do |form| %>
      <%= render_filter f,
                        :string,
                        :for_search_term,
                        label: t('search')
                        %>
      <%= render_filter f,
                        :select,
                        :for_full_width,
                        label: t('filters.attributes.element', element: t('admin.communication.website.pages.full_width_status').downcase),
                        collection: [{ to_s: I18n.t('true'), id: 'true' }, { to_s: I18n.t('false'), id: 'false' }]
                        %>
    <% end %>
  <% end %>
</div>
<%= render 'admin/application/components/lifecycle/label' %>
