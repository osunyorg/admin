<%
# Not in controller because it's loaded depending on the page type
@events = @website.events
                  .published_now_in(current_language)
                  .ordered(current_language)
                  .page(params[:events_page])
%>
<%= osuny_panel t('admin.communication.website.pages.special_page') do %>
  <p><%= t('admin.communication.website.pages.special_pages.communication_agenda.native', count: @events.total_count) %></p>
  <%= create_link Communication::Website::Agenda::Event %>
  <%= render 'admin/communication/websites/agenda/events/list', events: @events %>
  <%= paginate @events, param_name: :events_page %>
<% end %>