<%
# Not in controller because it's loaded depending on the page type
@programs = @website.education_programs
                    .published_now_in(current_language)
                    .ordered(current_language)
                    .page(params[:programs_page])
%>
<%= osuny_panel t('admin.communication.website.pages.special_page') do %>
  <p><%= t('admin.communication.website.pages.special_pages.education_program.native', count: @programs.total_count) %></p>
  <%= create_link Education::Program %>
  <%= render 'admin/education/programs/list', programs: @programs %>
  <%= paginate @programs, param_name: :programs_page %>
<% end %>