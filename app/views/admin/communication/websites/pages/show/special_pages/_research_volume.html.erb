<%
# Not in controller because it's loaded depending on the page type
@volumes = @website.research_volumes
                   .published_now_in(current_language)
                   .ordered(current_language)
                   .page(params[:volumes_page])
@journal = @volumes.first&.research_journal_id
%>
<%= osuny_panel t('admin.communication.website.pages.special_page') do %>
  <p><%= t('admin.communication.website.pages.special_pages.research_volume.native', count: @volumes.total_count) %></p>
  <%= render 'admin/research/journals/volumes/list', volumes: @volumes %>
  <%= paginate @volumes, param_name: :volumes_page %>
<% end %>