<%
# Not in controller because it's loaded depending on the page type
@locations = @website.administration_locations
                    #  .published_now_in(current_language)
                     .ordered(current_language)
                     .page(params[:locations_page])
%>
<%= osuny_panel t('admin.communication.website.pages.special_page') do %>
  <p><%= t('admin.communication.website.pages.special_pages.administration_location.native', count: @locations.total_count) %></p>
  <%= create_link Administration::Location %>
  <%= render 'admin/administration/locations/list', locations: @locations %>
  <%= paginate @locations, param_name: :locations_page %>
<% end %>