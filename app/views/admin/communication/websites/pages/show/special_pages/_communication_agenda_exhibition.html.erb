<%
# Not in controller because it's loaded depending on the page type
@exhibitions = @website.exhibitions
                       .published_now_in(current_language)
                       .ordered(current_language)
                       .page(params[:exhibitions_page])
%>
<%= osuny_panel t('admin.communication.website.pages.special_page') do %>
  <p><%= t('admin.communication.website.pages.special_pages.communication_agenda_exhibition.native', count: @exhibitions.total_count) %></p>
  <%= create_link Communication::Website::Agenda::Exhibition %>
  <%= render 'admin/communication/websites/agenda/exhibitions/list', exhibitions: @exhibitions %>
  <%= paginate @exhibitions, param_name: :exhibitions_page %>
<% end %>