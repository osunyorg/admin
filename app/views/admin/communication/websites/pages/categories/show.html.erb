<% content_for :title, @l10n %>

<% content_for :title_right do %>
  <%= edit_link @category %>
  <%= button_advanced do %>
    <%= destroy_link @category %>
  <% end %>
<% end %>

<%= render 'admin/application/categories/show', category: @category, l10n: @l10n %>

<% if @pages.total_count > 0 %>
  <div class="row">
    <div class="offset-lg-4 col-lg-8">
      <p>
        <%= @pages.total_count %> 
        <%= Communication::Website::Page.model_name.human(count: @pages.total_count).downcase %>
      </p>
      <%= render 'admin/communication/websites/pages/list', pages: @pages, hide_category: true %>
      <%= paginate @pages %>
      <div>
  </div>
<% end %>

<% content_for :server_admin_only do %>
  <%= static_link static_admin_communication_website_page_category_path(@category) %>
<% end %>
  