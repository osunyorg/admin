              current_path: admin_communication_website_jobboard_jobs_path,
              website: @website %>
</div>
<%= render 'admin/application/components/lifecycle/label' %>

<%= render 'admin/communication/websites/jobboard/jobs/list', jobs: @jobs %>
<%= paginate @jobs %>
