<% content_for :title, @l10n %>

<% content_for :title_right do %>
  <% job_url = @l10n.current_permalink_url_in_website(@website) %>
  <%= link_to t('open'),
              job_url,
              target: :_blank,
              class: button_classes if job_url %>
  <%= edit_link @job %>
  <%= publish_link @job %>
  <%= button_advanced do %>
    <%= destroy_link @job %>
    <%= duplicate_link @job %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-lg-7">
    <%= osuny_panel Communication::Website::Jobboard::Job::Localization.human_attribute_name(:title), small: true do %>
      <p class="lead"><%= @l10n.title %></p>
      <% if @l10n.subtitle.present? %>
        <p class="mt-n3 text-muted"><%= @l10n.subtitle %></p>
      <% end %>
      <p><%= render 'admin/communication/websites/jobboard/jobs/dates', job: @job, l10n: @l10n, detailed: true %></p>
    <% end %>
  </div>
  <div class="offset-lg-1 col-lg-4">
    <%= render 'admin/application/images/featured/show', about: @l10n, small: true %>
  </div>
</div>
<hr class="mb-5">
<%= render 'admin/application/a11y/widget', about: @l10n, horizontal: true %>
<hr class="mb-5">
<div class="row">
  <div class="col-lg-4">
    <%= osuny_panel t('metadata'), small: true do %>
      <%= render 'admin/application/publication/show', about: @l10n %>
      <%= render 'admin/application/categories/widget/show', about: @job %>
      <%= render 'admin/application/permalinks/redirects', about: @l10n %>
      <%= render 'admin/application/l10n/widget', about: @job, l10n: @l10n, small: true %>
    <% end %>
  </div>
  <div class="col-lg-8">
    <%= render 'admin/application/summary/show', about: @l10n, small: true %>
    <%= osuny_panel Communication::Website::Jobboard::Job::Localization.human_attribute_name("description"), small: true do %>
      <div><%= sanitize @l10n.description %></div>
    <% end if @l10n.description.present? %>
    <%= render 'admin/application/meta_description/show', about: @l10n %>
  </div>
</div>
<%= render 'admin/communication/contents/editor', about: @l10n %>

<% content_for :server_admin_only do %>
  <%= static_link static_admin_communication_website_jobboard_job_path(@job) %>
<% end %>