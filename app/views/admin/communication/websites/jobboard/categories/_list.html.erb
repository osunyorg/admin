<div class="table-responsive">
  <table class="<%= table_classes %>">
    <thead>
      <tr>
        <th><%= Communication::Website::Jobboard::Category.human_attribute_name('name') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% categories.each do |category| %>
        <tr>
          <td><%= link_to category, admin_communication_website_jobboard_category_path(website_id: category.website.id, id: category.id) %></td>
          <td class="text-end">
            <div class="btn-group" role="group">
              <%= link_to t('edit'),
                          edit_admin_communication_website_jobboard_category_path(website_id: category.website.id, id: category.id),
                          class: button_classes if category.editable? && can?(:update, category) %>
              <%= link_to t('delete'),
                          admin_communication_website_jobboard_category_path(website_id: category.website.id, id: category.id),
                          method: :delete,
                          data: { confirm: t('please_confirm') },
                          class: button_classes_danger if category.editable? && can?(:destroy, category) %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
