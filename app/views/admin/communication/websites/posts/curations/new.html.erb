<% content_for :title, t('communication.website.posts.new_curation') %>

<%= simple_form_for :curation, 
                    url: admin_communication_website_post_curations_path, 
                    html: { id: 'new_communication_website_post_curation' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :url,
              label: t('curation.label'),
              placeholder: t('curation.placeholder'),
              input_html: { value: @url } %>

  <% content_for :action_bar_right do %>
    <%= cancel [:admin, @website] %>
    <%= submit f %>
  <% end %>
<% end %>
