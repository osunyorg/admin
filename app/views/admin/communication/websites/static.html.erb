title: >
  <%= @about.to_s %>
default:
<% if @website.default_image.attached? %>
  image:
    id: <%= @website.default_image.blob&.id %>
<% end %>
<% if @website.default_shared_image.attached? %>
  shared_image:
    id: <%= @website.default_image.blob&.id %>
<% end %>
social:
<%
[
  :email,
  :mastodon,
  :peertube,
  :x,
  :github,
  :linkedin,
  :youtube,
  :vimeo,
  :instagram,
  :facebook,
  :tiktok
].each do |social_element|
  value = @website.send "social_#{social_element}"
  next if value.blank?
%>
  <%= social_element %>: >-
    <%= value %>
<% end %>