<% content_for :title, @l10n %>

<% content_for :title_right do %>
  <%= button_advanced do %>
    <%= destroy_link @project %>
    <%= duplicate_link @project %>
  <% end %>
  <%= preview_link %>
  <% project_url = @l10n.current_permalink_url_in_website(@website) %>
  <%= link_to t('open'),
              project_url,
              target: :_blank,
              class: button_classes if project_url %>
  <%= publish_link @project %>
  <%= edit_link @project %>
<% end %>

<div class="row">
  <div class="col-lg-7">
    <%= osuny_small_panel Communication::Website::Portfolio::Project::Localization.human_attribute_name(:title) do %>
      <p class="lead"><%= @l10n.title %></p>
    <% end %>
    <%= osuny_small_panel Communication::Website::Portfolio::Project::Localization.human_attribute_name(:subtitle) do %>
      <p class="lead"><%= @l10n.subtitle %></p>
    <% end if @l10n.subtitle.present? %>
    <%= render 'admin/application/summary/show', about: @l10n %>
  </div>
  <div class="offset-lg-1 col-lg-4">
    <%= render 'admin/application/images/featured/show', about: @l10n %>
  </div>
</div>
<hr class="mb-5">
<%= render 'admin/application/a11y/widget', about: @l10n, horizontal: true %>
<hr class="mb-5">
<div class="row">
  <div class="col-lg-4">
    <%= osuny_small_panel t('metadata') do %>
      <p>
        <%= @l10n.published ? Communication::Website::Portfolio::Project::Localization.human_attribute_name(:published)
                            : t('admin.communication.website.portfolio.project.localizations.draft') %>
        <% if @project.categories.any? %>
          <% category_names = @project.categories.map { |category| category.to_s_in(current_language) } %>
          <%= t('admin.communication.website.portfolio.projects.in', categories: category_names.join(', ')) %>
        <% end %>
      </p>
      <%= render 'admin/application/permalinks/redirects', about: @l10n %>
    <% end %>
  </div>
  <div class="col-lg-4">
    <%= render 'admin/application/l10n/widget', about: @project, l10n: @l10n %>
  </div>
  <div class="col-lg-4">
    <%= render 'admin/application/meta_description/show', about: @l10n %>
  </div>
</div>

<%= render 'admin/communication/contents/editor', about: @l10n %>

<% content_for :server_admin_only do %>
  <%= static_link static_admin_communication_website_portfolio_project_path(@project) %>
<% end %>
