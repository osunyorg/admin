<%= simple_form_for :filters, url: current_path, method: :get do |f| %>
  <%= filters_panel current_path: current_path, active_filters_count: active_filters_count do |form| %>

    <%= render_filter f,
                      :string,
                      :for_search_term,
                      label: t('search')
                      %>

    <%= render_filter f,
                      :select,
                      :for_kind,
                      label: t('filters.attributes.element', element: Communication::Website::Alert.human_attribute_name(:kind).downcase),
                      collection: Communication::Website::Alert.kinds.keys.map { |kind| { to_s: I18n.t("enums.communication.website.alert.kind.#{kind}"), id: kind } },
                      multiple: true
                      %>

    <% end %>
<% end %>
