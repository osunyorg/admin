<%
alert = @l10n.about
language = @l10n.language
%>---
id: <%= alert.id %>
title: >-
  <%= prepare_text_for_static @l10n.to_s %>
level: <%= alert.kind %>
content: >-
  <%= prepare_html_for_static @l10n.description %>
<% if @l10n.cta? %>
button:
  title: >-
    <%= prepare_text_for_static @l10n.cta_label %>
  url: >-
    <%= @l10n.cta_url %>
  target_blank: <%= @l10n.cta_url_external?(@website) %>
<% end %>
---
