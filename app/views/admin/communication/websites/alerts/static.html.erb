<%
alert = @l10n.about
language = @l10n.language
%>---
<%= osuny_static_text 'title', @l10n.to_s %>
level: <%= alert.kind %>
<%= osuny_static_html 'content', @l10n.description %>
<% if @l10n.cta? %>
button:
<%= osuny_static_text 'title', @l10n.cta_label, depth: 2 %>
<%= osuny_static_text 'url', @l10n.cta_url, depth: 2 %>
  target_blank: <%= @l10n.cta_url_external?(@website) %>
<% end %>
---
