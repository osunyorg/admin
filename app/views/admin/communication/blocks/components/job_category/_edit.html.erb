<%
categories = osuny_collection_tree(
  block.about.website.post_categories.root,
  localized: true
)
%>
<label  class="form-label"
        :for="<%= dom_id.html_safe %>">
  <%= label %>
</label>
<select :id="<%= dom_id.html_safe %>"
        class="form-select select mb-3"
        v-model="<%= model %>.<%= property %>">
  <% categories.each_with_index do |category, index| %>
    <option value="<%= category.last %>">
      <%= category.first.html_safe %>
    </option>
  <% end %>
</select>
