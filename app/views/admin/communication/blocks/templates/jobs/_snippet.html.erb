<% if block.template.selected_jobs.any? %>
  <% block.template.selected_jobs.each do |job|
      l10n = job.localization_for(block.about.language)
      next if l10n.nil?
      %>
    <article>
      <p>
        <%= l10n.title %>
      </p>
      <div class="small">
        <%= sanitize l10n.summary %>
      </div>
    </article>
  <% end %>
<% else %>
  <p><%= block.template.no_job_message %></p>
<% end %>