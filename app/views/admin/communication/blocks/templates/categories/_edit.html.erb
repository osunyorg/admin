<%= block_component_edit block, :description, summernote_config: 'mini' %>

<div class="row">
  <div class="col-lg-6">
    <fieldset class="mb-3">
      <legend class="form-label"><%= t('admin.communication.blocks.templates.categories.edit.category_kind.label') %></legend>
      <% block.template.category_kinds_allowed.each do |kind| %>
        <div class="form-check">
          <input  class="form-check-input"
                  type="radio"
                  name="communication_block[category_kind]"
                  value="<%= kind %>"
                  v-model="data.category_kind"
                  id="mode-<%= kind %>">
          <label class="form-check-label" for="mode-<%= kind %>">
            <%= t("enums.communication.block.template_kind.#{kind}") %>
          </label>
        </div>
      <% end %>
    </fieldset>
  </div>
  <div class="col-lg-6" v-show="data.category_kind">
    <%= block_component_edit block, :taxonomy_id %>
  </div>
</div>
<%= osuny_separator %>
<%= osuny_panel t('admin.communication.blocks.components.layouts.label'), small: true do %>
  <%= block_component_edit block, :layout %>
  <%= osuny_label t('admin.communication.blocks.display_options.title') %>
  <%= block_component_edit block, :option_image %>
  <%= block_component_edit block, :option_summary %>
  <%= block_component_edit block, :option_count %>
<% end %>